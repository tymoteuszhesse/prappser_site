{
    "type": "scaffold",
    "args": {
        "resizeToAvoidBottomInset": true,
        "body": {
            "type": "column",
            "args": {
                "mainAxisSize": "max",
                "children": [
                    {
                        "type": "text",
                        "args": {
                            "style": {
                                "fontWeight": "bold"
                            },
                            "text": "To do:"
                        }
                    },
                    {
                        "type": "expanded",
                        "id": "messages",
                        "args": {
                            "child": {
                                "type": "save_context",
                                "args": {
                                    "key": "_dialogContext",
                                    "child": {
                                        "type": "dynamic",
                                        "id": "items",
                                        "args": {
                                            "dynamic": {
                                                "builderType": "list_view",
                                                "childTemplate": {
                                                    "type": "set_value",
                                                    "listen": [
                                                        "edit_message_{id}"
                                                    ],
                                                    "args": {
                                                        "cleanup": false,
                                                        "values": {
                                                            "_editDialogData{id}": {
                                                                "actions": [
                                                                    {
                                                                        "title": {
                                                                            "type": "text",
                                                                            "args": {
                                                                                "text": "Submit"
                                                                            }
                                                                        },
                                                                        "onPressed": "${dynamic('_edit{id}Element')}"
                                                                    }
                                                                ],
                                                                "title": {
                                                                    "type": "text",
                                                                    "args": {
                                                                        "text": "Edit"
                                                                    }
                                                                },
                                                                "content": {
                                                                    "type": "form",
                                                                    "args": {
                                                                        "child": {
                                                                            "type": "single_child_scroll_view",
                                                                            "args": {
                                                                                "child": {
                                                                                    "type": "container",
                                                                                    "args": {
                                                                                        "child": {
                                                                                            "type": "text_form_field",
                                                                                            "id": "edit_message_{id}",
                                                                                            "args": {
                                                                                                "initialValue": "{message}",
                                                                                                "decoration": {
                                                                                                    "hintText": "Write a message"
                                                                                                },
                                                                                                "validators": [
                                                                                                    {
                                                                                                        "type": "required"
                                                                                                    }
                                                                                                ]
                                                                                            }
                                                                                        },
                                                                                        "alignment": "topCenter",
                                                                                        "width": "infinity"
                                                                                    }
                                                                                },
                                                                                "padding": [
                                                                                    16,
                                                                                    0
                                                                                ]
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            },
                                                            "_edit{id}Element": {
                                                                "type": "edit",
                                                                "builder": "items",
                                                                "target": {
                                                                    "id": "{id}"
                                                                },
                                                                "values": {
                                                                    "message": "${edit_message_{id}}"
                                                                }
                                                            },
                                                            "_remove{id}Element": {
                                                                "type": "remove",
                                                                "builder": "items",
                                                                "target": {
                                                                    "id": "{id}"
                                                                }
                                                            },
                                                            "_dynamicItemsAdd2{id}": {
                                                                "type": "add",
                                                                "builder": "finished_items",
                                                                "target": {
                                                                    "index": 0
                                                                },
                                                                "values": {
                                                                    "message": "{message}"
                                                                }
                                                            }
                                                        },
                                                        "child": {
                                                            "id": "{id}",
                                                            "type": "list_tile",
                                                            "args": {
                                                                "trailing": {
                                                                    "type": "checkbox",
                                                                    "args": {
                                                                        "onChanged": "${onChanged(dynamic('_dynamicItemsAdd2{id}','_remove{id}Element'))}"
                                                                    }
                                                                },
                                                                "title": {
                                                                    "type": "text",
                                                                    "args": {
                                                                        "text": "{message}"
                                                                    }
                                                                },
                                                                "onLongPress": "${show_dialog('_dialogContext', '_editDialogData{id}')}"
                                                            }
                                                        }
                                                    }
                                                },
                                                "initState": []
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "type": "expanded",
                        "id": "finished",
                        "args": {
                            "key": "_dialogContext",
                            "child": {
                                "type": "dynamic",
                                "id": "finished_items",
                                "args": {
                                    "dynamic": {
                                        "builderType": "list_view",
                                        "childTemplate": {
                                            "type": "set_value",
                                            "listen": [],
                                            "args": {
                                                "cleanup": false,
                                                "values": {
                                                    "_remove{id}Element": {
                                                        "type": "remove",
                                                        "builder": "finished_items",
                                                        "target": {
                                                            "id": "{id}"
                                                        }
                                                    }
                                                },
                                                "child": {
                                                    "id": "{id}",
                                                    "type": "list_tile",
                                                    "args": {
                                                        "trailing": {
                                                            "type": "checkbox",
                                                            "args": {
                                                                "enabled": false,
                                                                "value": true
                                                            }
                                                        },
                                                        "onLongPress": "${dynamic('_remove{id}Element')}",
                                                        "title": {
                                                            "type": "text",
                                                            "args": {
                                                                "style": {
                                                                    "fontWeight": "bold",
                                                                    "decoration": "lineThrough"
                                                                },
                                                                "text": "{message}"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "type": "form",
                        "args": {
                            "child": {
                                "type": "single_child_scroll_view",
                                "args": {
                                    "padding": [
                                        16,
                                        0
                                    ],
                                    "child": {
                                        "type": "container",
                                        "args": {
                                            "alignment": "topCenter",
                                            "width": "infinity",
                                            "child": {
                                                "type": "container",
                                                "args": {
                                                    "constraints": {
                                                        "maxWidth": 450
                                                    },
                                                    "child": {
                                                        "type": "column",
                                                        "args": {
                                                            "mainAxisSize": "min",
                                                            "children": [
                                                                {
                                                                    "type": "sized_box",
                                                                    "args": {
                                                                        "height": 16
                                                                    }
                                                                },
                                                                {
                                                                    "type": "sized_box",
                                                                    "args": {
                                                                        "height": 8
                                                                    }
                                                                },
                                                                {
                                                                    "type": "material",
                                                                    "args": {
                                                                        "borderRadius": 16,
                                                                        "color": "#fff",
                                                                        "elevation": 4,
                                                                        "margin": [
                                                                            0,
                                                                            8
                                                                        ],
                                                                        "padding": 16,
                                                                        "child": {
                                                                            "type": "column",
                                                                            "args": {
                                                                                "mainAxisSize": "min",
                                                                                "children": [
                                                                                    {
                                                                                        "type": "row",
                                                                                        "args": {
                                                                                            "children": [
                                                                                                {
                                                                                                    "type": "flexible",
                                                                                                    "args": {
                                                                                                        "child": {
                                                                                                            "type": "text_form_field",
                                                                                                            "id": "_form_message",
                                                                                                            "args": {
                                                                                                                "decoration": {
                                                                                                                    "labelText": "New task",
                                                                                                                    "suffixIcon": {
                                                                                                                        "type": "icon_button",
                                                                                                                        "args": {
                                                                                                                            "icon": {
                                                                                                                                "type": "icon",
                                                                                                                                "args": {
                                                                                                                                    "icon": {
                                                                                                                                        "codePoint": 57704,
                                                                                                                                        "fontFamily": "MaterialIcons",
                                                                                                                                        "size": 50
                                                                                                                                    }
                                                                                                                                }
                                                                                                                            },
                                                                                                                            "onPressed": "${set_value('_form_message','')}"
                                                                                                                        }
                                                                                                                    }
                                                                                                                },
                                                                                                                "validators": [
                                                                                                                    {
                                                                                                                        "type": "required"
                                                                                                                    }
                                                                                                                ]
                                                                                                            }
                                                                                                        }
                                                                                                    }
                                                                                                }
                                                                                            ]
                                                                                        }
                                                                                    }
                                                                                ]
                                                                            }
                                                                        }
                                                                    }
                                                                },
                                                                {
                                                                    "type": "set_value",
                                                                    "listen": [
                                                                        "_form_message"
                                                                    ],
                                                                    "args": {
                                                                        "values": {
                                                                            "_dynamicItemsAdd": {
                                                                                "type": "add",
                                                                                "builder": "items",
                                                                                "target": {
                                                                                    "index": 0
                                                                                },
                                                                                "values": {
                                                                                    "message": "${_form_message}"
                                                                                }
                                                                            }
                                                                        },
                                                                        "child": {
                                                                            "type": "elevated_button",
                                                                            "args": {
                                                                                "onPressed": "${dynamic('_dynamicItemsAdd')}",
                                                                                "child": {
                                                                                    "type": "container",
                                                                                    "args": {
                                                                                        "alignment": "center",
                                                                                        "width": "infinity",
                                                                                        "child": {
                                                                                            "type": "text",
                                                                                            "args": {
                                                                                                "text": "Add"
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                },
                                                                {
                                                                    "type": "set_value",
                                                                    "listen": [],
                                                                    "args": {
                                                                        "values": {}
                                                                    }
                                                                }
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}